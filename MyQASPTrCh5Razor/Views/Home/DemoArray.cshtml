@using MyQASPTrCh5Razor.Models
@model Product[]
@{
    ViewBag.Title = "DemoArray";
    Layout = "~/Views/_BasicLayout.cshtml";
}

@if (Model.Length>0)
{
    <h2>Table</h2>
    <table>
        <thead> <tr><th>Product</th> <th> Price</th></tr></thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No Product data</h2>
}
